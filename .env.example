# ===========================================
# VelloPad Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Supabase
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# Stripe
# ===========================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Price IDs (create these in Stripe dashboard)
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_PRO_YEARLY=price_...

# ===========================================
# Print-on-Demand Providers
# ===========================================
# Peecho
PEECHO_API_KEY=your-peecho-api-key
PEECHO_WEBHOOK_SECRET=your-peecho-webhook-secret

# Lulu
LULU_API_KEY=your-lulu-api-key
LULU_API_SECRET=your-lulu-api-secret

# Prodigi
PRODIGI_API_KEY=your-prodigi-api-key

# Bookvault
BOOKVAULT_API_KEY=your-bookvault-api-key

# ===========================================
# Redis (for BullMQ queues)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# Email (Resend or SendGrid)
# ===========================================
RESEND_API_KEY=re_...
# or
SENDGRID_API_KEY=SG....

EMAIL_FROM=hello@vellopad.com

# ===========================================
# AI / LLM (for prompt sidekick)
# ===========================================
OPENAI_API_KEY=sk-...

# ===========================================
# Analytics
# ===========================================
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ===========================================
# Storage (Supabase Storage or S3)
# ===========================================
# If using S3 instead of Supabase Storage:
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=vellopad-assets

# ===========================================
# Application
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
